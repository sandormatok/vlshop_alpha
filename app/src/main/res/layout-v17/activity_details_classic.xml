<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7491a6"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.google.android.gms.oem.raktar.vlscan.DetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/toptextView"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:background="#7491a6"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="4dp"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:onClick="enter_mennyisegClick"
        android:layout_height="60dp"
        android:text="Mennyiség\nJavítása..."
        android:id="@+id/read_barcode"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/fakeView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:layout_alignEnd="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Tétel\ntörlése!"
        android:onClick="enter_mennyisegClick"
        android:id="@+id/enter_barcode"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/fakeView" />


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_below="@+id/toptextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/read_barcode"
        >

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/table01"
                android:layout_weight="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#0c4593"
                android:textColor="#ffffff"
                android:text="EAN"
                android:padding="4dip"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/table02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dip"
                android:background="#0c4593"
                android:textColor="#ffffff"
                android:textSize="24sp"

                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_weight="0"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#3f78c6"
                android:textColor="#ffffff"
                android:id="@+id/table11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dip"
                android:text="MÁRKA"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:textAllCaps="true"
                android:id="@+id/table12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dip"
                android:background="#3f78c6"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

    </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
